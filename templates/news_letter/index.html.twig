{% extends "template.html.twig" %} {% block title %} Newsletter Subscription {%
endblock title %} {% block body %} {% block pagetitle %} Subscribe to our
Newsletter {% endblock pagetitle %}
<div class="container mt-5">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <div class="card">
        <div class="card-header">Subscribe to our Newsletter</div>
        <div class="card-body">
          <form>
            <div class="mb-3">
              <label for="subscriberEmail" class="form-label"
                >Email address</label
              >
              <input
                type="email"
                class="form-control"
                id="subscriberEmail"
                aria-describedby="emailHelp"
                placeholder="Enter your email"
              />
              <div id="emailHelp" class="form-text">
                We'll never share your email with anyone else.
              </div>
            </div>
            <div class="mb-3 form-check">
              <input
                type="checkbox"
                class="form-check-input"
                id="checkUpdates"
              />
              <label class="form-check-label" for="checkUpdates"
                >Yes, I want to receive email updates.</label
              >
            </div>
            <button type="submit" class="btn btn-primary">Subscribe</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
{% endblock body %}
