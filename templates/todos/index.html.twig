{% extends "template.html.twig" %} {% block title %} Todo {% endblock title %}
{% block body %} {% for message in app.session.flashBag.get('info') %}
<div class="alert alert-info">
  {{ message }}
</div>
{% endfor %} {% for message in app.session.flashBag.get('success') %}
<div class="alert alert-success">
  {{ message }}
</div>
{% endfor %} {% for message in app.session.flashBag.get('error') %}
<div class="alert alert-error">
  {{ message }}
</div>
{% endfor %} {% block pagetitle %} Liste des todos {% endblock pagetitle %}
<ul class="list-group list-group-flush">
  {% for name,content in app.session.get('todos') %}
  <li class="list-group-item">{{ name }} : {{ content }}</li>
  {% endfor %}
</ul>
{% endblock body %}
